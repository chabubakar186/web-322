<!DOCTYPE html>
<html>
<head>
    <title>Your Tasks</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <%- include("partials/navbar") %>

    <div class="container">
        <h2>Your Tasks</h2>

        <a href="/tasks/add" class="btn">Add Task</a>

        <table>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>

            <% tasks.forEach(task => { %>
                <tr>
                    <td><%= task.title %></td>
                    <td><%= task.complete ? "Completed" : "Pending" %></td>

                    <td>
                        <a href="/tasks/edit/<%= task.id %>">Edit</a>

                        <form action="/tasks/delete/<%= task.id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>

                        <form action="/tasks/status/<%= task.id %>" method="POST" style="display:inline;">
                            <select name="status" onchange="this.form.submit()">
                                <option value="pending" <%= !task.complete ? "selected" : "" %>>Pending</option>
                                <option value="completed" <%= task.complete ? "selected" : "" %>>Completed</option>
                            </select>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </table>

        <footer>WEB322 Assignment 3 â€” Siddhant Bisht</footer>
    </div>
</body>
</html>
